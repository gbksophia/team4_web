    <!-- Default set of monitored resources. If one of these changes, the    -->
    <!-- web application will be reloaded.                                   -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <WatchedResource>${catalina.base}/conf/web.xml</WatchedResource>

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->
    <Resource 
    	name="jdbc/xe" 
    	auth="container" 
    	driverClassName="oracle.jdbc.driver.OracleDriver"
    	url="jdbc:oracle:thin:@nullmaster.iptime.org:1521:xe"
    	type="javax.sql.DataSource"
    	username="class11"
    	password="class11"
    	maxActive="50"
    	maxIdle="20"
    	testOnBorrow="true"
    	testOnReturn="true"
    	
    	/>
    	<!-- 
이름을 씀 
    	 auth : container : 뭔가를 담아줄수있는 틀을 이야기함
    	 type : 생성될 객체 타입을 지정한다. javax.sql.DataSource는 다중접속이 가능한 connection과 같다.
    	 maxActive : 동시에 50개까지 연결이 가능(기본 20개)
    	 maxIdle : 기본적으로 생성되어 있는 갯수, 더 많은 개수가 필요할 시 일시적으로 늘어난 후 줄어들게 된다.
    	 testOnBorrow : 현재 가지고 있는 객체가 검사하고 대여한다는 이야기이다.
    	 testOnReturn : 반환 받을 때도 검사한다.
    	 유효성 검사 후 틀리면 삭제하고 다시 만든다.
    -->
</Context>